                 (. formals.Add(new Formal(id, id.val, ty, incoming, isGhost, isOld)); .)
    { "," GIdentType<allowGhostKeyword, allowNewKeyword, out id, out ty, out isGhost, out isOld>
                 (. formals.Add(new Formal(id, id.val, ty, incoming, isGhost, isOld)); .)
    }
